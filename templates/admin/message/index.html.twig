{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    <h1>Message</h1>
    {# <a href="{{ path('user_new') }}" type="button" class="btn btn-primary">Create new</a> #}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ServiceId</th>
                <th>Date_send</th>
                <th>Content</th>
                <th>Disabled</th>
                <th>ParentId</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.serviceId }}</td>
                <td>{{ message.dateSend ? message.dateSend|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ message.content }}</td>
                <td>{{ message.disabled ? 'Yes' : 'No' }}</td>
                <td>{{ message.parentId }}</td>
                <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('message_show', {'id': message.id}) }}">show</a>
                    <a href="{{ path('message_edit', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
