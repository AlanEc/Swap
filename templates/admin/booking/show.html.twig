{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('build/admin.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
    <div class="containerCrud">
        <div class="row">
            <div class="col-xs-offset-1 col-xs-10">
                <div class="panel panel-default">
                    <div class="panel-body tab">
                        <h1>Booking</h1>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ booking.id }}</td>
                                </tr>
                                <tr>
                                    <th>Date_start</th>
                                    <td>{{ booking.dateStart ? booking.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Date_end</th>
                                    <td>{{ booking.dateEnd ? booking.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Disabled</th>
                                    <td>{{ booking.disabled ? 'Yes' : 'No' }}</td>
                                </tr>
                                <tr>
                                    <th>Created_at</th>
                                    <td>{{ booking.createdAt ? booking.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Updated_at</th>
                                    <td>{{ booking.updatedAt ? booking.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="{{ path('booking_index') }}" id="backBtn" type="button" class="btn btn-primary">back to list</a>
                        <a href="{{ path('booking_edit', {'id': booking.id}) }}" id="editBtn" type="button" class="btn btn-primary">edit</a>
                        {# {{ include('admin/booking/_delete_form.html.twig') }}#}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/admin.js') }}"></script>
{% endblock %}
