<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="{{ asset('build/app.css') }}" rel="stylesheet" />
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle"
                            data-toggle="collapse"
                            data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand"
                       href="{{ path('core_home') }}"
                       data-toggle="tooltip"
                       data-placement="bottom"
                       title="">{{ 'navbar.brand'|trans }}</a>
                </div>
                <div class="navbar-collapse collapse">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <div id="icon">
                            <input id="pac-input" class="controls" type="text" placeholder="Search Box">
                            <ul class="nav navbar-nav navbar-right">
                                <li class=""><a href=""> <span class="glyphicon glyphicon-envelope fa-lg"></span></a></li>
                                <li><a href=""><span class="glyphicon glyphicon-user fa-lg"></span>{{ 'navbar.account'|trans }}</a></li>
                                <li class="separation">|</li>
                                <li><a href="{{ path('app_logout') }}">{{ 'navbar.signout'|trans }}</a></li>
                            </ul>
                        </div>
                    {% else %}
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="{{ path('app_login') }}">
                                    {{ 'navbar.signin'|trans }}
                                </a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
                <!--/.navbar-collapse -->
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div id="flashMessage" class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
        {% block javascripts %}
        {% endblock %}
        <script src="{{ asset('build/app.js') }}"></script>
    </body>
</html>
