<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="{{ asset('build/app.css') }}" rel="stylesheet" />
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle"
                            data-toggle="collapse"
                            data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand"
                       href="{{ path('core_home') }}"
                       data-toggle="tooltip"
                       data-placement="bottom"
                       title="">{{ 'navbar.brand'|trans }}</a>
                </div>
                <div class="navbar-collapse collapse">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <div id="icon">
                            <ul class="nav navbar-nav navbar-center">
                                <li><input id="pac-input" class="form-control" type="text" placeholder="Search Box"></li>
                            </ul>
                            <ul class="nav navbar-nav navbar-right">
                                <li class=""><a href="{{ path('app_message_mailBox')}}"> <span class="glyphicon glyphicon-envelope fa-lg"></span></a></li>
                                <li><a href="{{ path('app_account')}}">{{ 'navbar.account'|trans }}</a></li>
                                <li class="separation">|</li>
                                <li><a href="{{ path('app_logout') }}">{{ 'navbar.signout'|trans }}</a></li>
                            </ul>
                        </div>
                    {% else %}
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="{{ path('app_login') }}">
                                    {{ 'navbar.signin'|trans }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">Register</a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
                <!--/.navbar-collapse -->
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div id="flashMessage" class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div id="flashMessage" class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBKKFn2CuDFoSkzLG0PJf2nhTyk9sSNbBE&libraries=places&callback=initAutocomplete"
        ></script>
        <script type="text/javascript" src="{{ asset('build/test.js') }}"></script>
        <script type="text/javascript" src="{{ asset('build/app.js') }}"></script>
        {% block body %}{% endblock %}
        {% block javascripts %}
        {% endblock %}
        {% include 'footer.html.twig' %}
    </body>
</html>
