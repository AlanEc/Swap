<div id="panelClickable" class="panel panel-info shadow account">
    <div class="panel-heading">
        <span class="titreCompte"><h3 class="panel-title">{{ 'core.dashboard.block_next_swap_toReceived.title'|trans }} <span class="badge"></span></h3><span>
        <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-down"></i></span>
    </div>
    <div id="panelClickableBody" class="panel-body">
        {% for bookingDone in bookingsDone %}
            {% if bookingDone.bookingState.label == 'Accepted' %}
                <table>
                    <thead>
                        <tr>
                            <td>Statut</td>
                            <td>Date/Service</td>
                            <td>Membre</td>
                            <td>Action</td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>{{ bookingDone.bookingState.label }}</td>
                            <td>
                                </br>
                                Du : {{ bookingDone.dateStart|date('d-m-Y') }}</br>
                                Au : {{ bookingDone.dateEnd|date('d-m-Y') }}
                            </td>
                            <td>
                                {{ bookingDone.swapService.user.lastName }} {{ bookingDone.swapService.user.lastName }}
                            </td>
                            <td>
                                <!-- Button trigger modal -->
                                <button class="btn btn-danger raleway400 text-center col-xs-94 col-xs-offset-1" data-toggle="modal" data-target="#modalRequestSent"><span class="glyphicon glyphicon-remove"></span></button>
                                </button>
                                <!-- Modal -->
                                <div class="modal fade" id="modalRequestSent" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Etes-vous s√ªr de vouloir refuser ce service ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <a href="{{ path('swap_booking_canceled', {'bookingId': bookingDone.id })}}">
                                                    <button class="btn btn-danger raleway400 text-center col-xs-94 col-xs-offset-1"><span class="glyphicon glyphicon-remove"></span></button>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            {% endif %}
        {% endfor %}
    </div>
</div>