{% extends 'base.html.twig' %}
{% block title %}Manage Account!{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('build/dashboard.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
    <div id="containerDashboard">
        <div class="row">
            <div class="col-sm-3 col-sm-offset-1 col-xs-12">
                <div class="panel-body shadow account">
                    {% if user.image == null %}
                        <img class="img-responsive" src="{{asset('build/static/silhouette.png') }}">
                    {% else %}
                        <img class="img-responsive" src="{{asset('build/uploads/pictures/optimized/' ~ user.image.image) }}">
                    {% endif %}
                    <p>{{ user.firstName }} {{ user.lastName }}</p>
                    <p>SwapBank : {{ user.account }}</p>
                    <a href="{{ path('app_profile')}}">
                        <button id="boutonProfil" class="btn btn-primary text-center col-md-12">Uploader une image</button>
                    </a>
                </div>
            </div>
        <div class="col-lg-7 col-md-12">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div id="btnChoice">
                <a href="{{ path('swap_user')}}">
                    <button type="button" id="choice" class="btn btn-info btn-lg col-lg-3 col-xs-offset-1 col-xs-10">{{ 'core.dashboard.btn_swaps'|trans }} <span class="glyphicon glyphicon-edit"></span></button>
                </a>
                <a href="{{ path('swap_create')}}">
                    <button type="button" class="btn btn-success btn-lg col-lg-offset-1 col-lg-4 col-xs-offset-1 col-xs-10">{{ 'core.dashboard.btn_add_swap'|trans }} <span class="glyphicon glyphicon-plus"></span></button>
                </a>
                <a href="{{ path('app_message_mailBox')}}">
                    <button type="button" class="btn btn-primary btn-lg col-lg-offset-1 col-lg-3 col-xs-offset-1 col-xs-10">{{ 'core.dashboard.btn_messages'|trans }} <span class="glyphicon glyphicon-envelope"></span></button>
                </a>
            </div>
         {% endif %}
        <div class="panel-body shadow account">
            <a href="{{ path('swap_user')}}">
                <button type="button" id="choice" class="btn btn-info btn-lg col-md-3 col-xs-10">{{ 'core.dashboard.btn_swaps'|trans }} <span class="glyphicon glyphicon-edit"></span></button>
            </a>
            <a href="{{ path('swap_create')}}">
                <button type="button" class="btn btn-success btn-lg col-md-offset-1 col-md-4">{{ 'core.dashboard.btn_add_swap'|trans }} <span class="glyphicon glyphicon-plus"></span></button>
            </a>
            <a href="{{ path('app_message_mailBox')}}">
                <button type="button" class="btn btn-primary btn-lg col-md-offset-1 col-md-3">{{ 'core.dashboard.btn_messages'|trans }} <span class="glyphicon glyphicon-envelope"></span></button>
            </a>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        {% include 'core/dashboard/requestReceived.html.twig' %}
                        <div class="row">
                            <div class="col-md-12">
                                {% include 'core/dashboard/requestSent.html.twig' %}
                                <div class="row">
                                    <div class="col-md-12">
                                        {% include 'core/dashboard/nextSwapReceived.html.twig' %}
                                        <div class="row">
                                            <div class="col-md-12">
                                                {% include 'core/dashboard/nextSwapToRender.html.twig' %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
    </div>

    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('build/dashboard.js') }}"></script>
    {% endblock %}