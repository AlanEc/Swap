{% extends 'base.html.twig' %}

{% block title %}My Swaps{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('build/mySwapsServices.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}
<div class="mySwapsContainer">
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
            <div class="panel panel-default shadow">
                <h1>Mes Swaps</h1>
                {% for service in services %}
                    {% if service.disabled != 0 %}
                    <div  id="rowMySwaps" class="row">
                        <div class="col-xs-offset-1 col-xs-10">
                            <a href="">
                                <div id="mySwap" class="panel panel-default">
                                    <div class="row">
                                        <div class="col-xs-offset-1  col-xs-8 mySwaps">
                                            <p> {{ service.adress1 }} </p>
                                            <p> {{ service.swapServiceType.label }} </p>
                                        </div>
                                        <a href="{{ path('swap_delete', {'serviceId': service.id })}}">
                                            <div class="col-md-2  deletedSwap ">
                                                <span class="glyphicon glyphicon-remove fontbig hidden-xs"></span>
                                                <br>
                                                <p>Supprimer</p>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/mySwapsServices.js') }}"></script>
{% endblock %}